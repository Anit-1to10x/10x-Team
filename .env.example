# ============================================
# 10x Team - Unified Environment Configuration
# Developed by Team 10x.in
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control
# ============================================

# ============================================
# AI/ML API Keys (REQUIRED)
# ============================================

# Google Gemini API - For AI image/video generation, multimodal
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Exa AI - For intelligent prospect discovery and web search
# Get from: https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# ============================================
# Optional AI APIs
# ============================================

# OpenAI API Key (optional - for GPT-based features)
# OPENAI_API_KEY=your_openai_key_here

# Anthropic API Key (optional - for direct Claude API access)
# ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================
# Video Processing
# ============================================

# VidCap.xyz API - For YouTube video processing
# Get from: https://vidcap.xyz
VIDCAP_API_KEY=your_vidcap_api_key_here

# ============================================
# Google Services
# ============================================

# Google Analytics 4 Access Token
# Get from: Google Cloud Console
GA_ACCESS_TOKEN=your_ga_access_token_here

# Google Ads Developer Token
# Get from: Google Ads API Center
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_token_here

# Google Search Console API
# GSC_API_KEY=your_gsc_api_key_here

# ============================================
# Email Services
# ============================================

# SendGrid API Key - For email campaigns
# Get from: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Resend API Key (alternative to SendGrid)
# Get from: https://resend.com/
# RESEND_API_KEY=your_resend_api_key_here

# Gmail OAuth2 (for outreach)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# ============================================
# Notifications
# ============================================

# Discord Webhook URL
# Get from: Server Settings → Integrations → Webhooks → New Webhook
# Format: https://discord.com/api/webhooks/WEBHOOK_ID/WEBHOOK_TOKEN
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack User Token
# Get from: Slack App OAuth & Permissions
SLACK_USER_TOKEN=your_slack_user_token_here

# Telegram Bot
# Get from: @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Browser Extension / WebSocket
# ============================================

# WebSocket Server URL (for browser extension communication)
WEBSOCKET_URL=ws://localhost:3002/ws

# Canvas WebSocket URL (for TLDraw workflow)
CANVAS_WEBSOCKET_URL=ws://localhost:3002/ws

# ============================================
# MCP Servers Configuration
# ============================================

# Exa AI MCP Server
EXA_MCP_ENABLED=true

# Websets MCP Server (for curated web collections)
WEBSETS_MCP_ENABLED=true

# Context7 MCP Server
CONTEXT7_API_KEY=your_context7_api_key_here

# ============================================
# Application Ports
# ============================================

# Marketing Dashboard Port
DASHBOARD_PORT=3000

# TLDraw Canvas Port
CANVAS_PORT=3001

# WebSocket Server Port
WEBSOCKET_PORT=3002

# API Server Port
API_PORT=3003

# ============================================
# Output Configuration
# ============================================

# Output directory for workflows
OUTPUT_DIR=output

# Default export formats (comma-separated: json,pdf,ppt,md,png,svg)
DEFAULT_EXPORT_FORMATS=json,md,png

# ============================================
# Development Settings
# ============================================

# NODE_ENV=development
# DEBUG=true
# LOG_LEVEL=info

# Project Configuration
PROJECT_NAME=10x-team
# ENVIRONMENT=local

# ============================================
# Rate Limiting (for outreach safety)
# ============================================

# LinkedIn daily limits
LINKEDIN_CONNECTIONS_DAILY=20
LINKEDIN_MESSAGES_DAILY=50

# Twitter daily limits
TWITTER_FOLLOWS_DAILY=50
TWITTER_DMS_DAILY=50

# Instagram daily limits
INSTAGRAM_FOLLOWS_DAILY=30
INSTAGRAM_DMS_DAILY=30

# Email daily limit
EMAIL_SENDS_DAILY=100
